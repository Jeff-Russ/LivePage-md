<!DOCTYPE html>
<html>
   <head>
      
      <%= favicon_link_tag 'favicon.ico' %>
      <title class='title'></title>
      <%= stylesheet_link_tag    'application',
                                    media: 'all','data-turbolinks-track'=>true %>
      <%= csrf_meta_tags %>
      <%= javascript_include_tag 'pageview.main','data-turbolinks-track'=>true %>
      
   </head>
   <body class="jr-darker-body">
      
      <% if @all[:host] == 'jr' %>
         <%= render partial: 'gtm_jr' %>
      <% elsif @all[:host] == 'md' %>
         <%= render partial: 'gtm_md' %>
      <% end %>
      
      <%= @all[:content] %> 
      
   </body>
</html>