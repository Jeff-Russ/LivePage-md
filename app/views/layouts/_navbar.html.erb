<!-- BEGIN NAVBAR (non-collapsing)-->
<div class="container">
	<nav id='topbar' class="navbar navbar-inverse navbar-fixed-top blacknav" role="navigation" id='topbar'>
	
			<div class="navbar-left">
				
				<%= link_to 'http://www.jeffruss.com', class: "navbar-brand" do %>
					<button class="btn navbar-btn greenwell">
						<img style="max-width:50px;"
							src="http://i1377.photobucket.com/albums/ah75/Jeffrey_Russ/JR_20px_wide_zpsy9os6cdz.png">
					</button>
				<% end %>
			</div>
			
			<div class="navbar-right"> 
				
				<!-- navbar buttons for modal windows -->
				
				<!-- modal 1 - select a subject (group of pages - controller )-->
				<button type='button' data-toggle='modal' id='subject-btn' 
						class='btn navbar-btn nav-button' data-target='#modal-topic-menu'>
				</button>
				
				<!-- modal 2 - select a topic (jump to id on page)-->
				<button type='button' data-toggle='modal' id='topic-btn' 
						class="btn navbar-btn nav-button" data-target='#modal-chapter-menu'>
				</button>
				
				
			</div> <!-- end navbar right -->
	</nav> <!--END NAVBAR-->
	
	<!-- CONTENTS OF THREE MODAL WINDOWS -->
	
	<!-- modal 1 - select a subject -->
	<div class="modal" id="modal-subject-menu" tabindex='-1' role='dialog'>
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header jr-dark-bg">
					<button type="button" class="close" data-dismiss='modal'>
						&times;
					</button><br>
				</div>
				<div class="modal-body">
					<%= render :file => 'layouts/home_menu' %>
					<div class="modal-footer"></div>
				</div>
			</div>
		</div>
	</div>
	<!-- modal 2 - select a topic -->
	<div class="modal" id="modal-chapter-menu" tabindex='-1' role='dialog'>
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header jr-dark-bg">
					<button type="button" class="close" data-dismiss='modal'>
						&times;
					</button><br>
				</div>
				<div class="modal-body">
					
					<div class="jr-dark-bg">
						<div class="row text-center">
							<h3>Pick a Chapter</h3>
						</div>
						<div class="row spacer">
							
							<div id="chapter-menu">
								
							</div>
						</div>
					</div>
					
					<div class="modal-footer"></div>
				</div>
			</div>
		</div>
	</div>
</div>